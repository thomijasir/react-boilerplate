		"react-dom": "^17.0.2",
		"react-router-dom": "^6.0.0",
		"source-map-explorer": "^2.5.2"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/preset-env": "^7.16.0",
		"@babel/preset-react": "^7.16.0",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.5.1",
		"fs-extra": "^10.0.0",
