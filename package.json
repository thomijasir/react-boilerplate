{
	"name": "react-boilerplate",
	"version": "1.0.0",
	"node-version": "16.13.0",
	"description": "react-boilerplate by thomi jasir",
	"main": "index.js",
	"engines": {
		"npm": ">=8.0.0",
		"node": "~16.13.0"
	},
	"scripts": {
		"buildx": "yarn clean; webpack --config config/webpack-prod-config.js",
    "clean": "rm -rf build/*",
